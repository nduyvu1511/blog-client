{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@/models": ["./models/index.ts"],
      "@/models/*": ["./models/*"],
      "@/apis": ["./apis/index.ts"],
      "@/apis/*": ["./apis/*"],
      "@/utils": ["./utils/index.ts"],
      "@/utils/*": ["./utils/*"],
      "@/routers": ["./routers/index.ts"],
      "@/routers/*": ["./routers/*"],
      "@/components": ["./shared/components/index.ts"],
      "@/components/*": ["./shared/components/*"],
      "@/helper": ["./shared/helper/index.ts"],
      "@/helper/*": ["./shared/helper/*"],
      "@/hooks": ["./shared/hooks/index.ts"],
      "@/hooks/*": ["./shared/hooks/*"],
      "@/assets": ["./shared/assets/index.ts"],
      "@/assets/*": ["./shared/assets/*"],
      "@/container": ["./container/index.ts"],
      "@/container/*": ["./container/*"],
      "@/layout": ["./layout/index.ts"],
      "@/layout/*": ["./layout/*"],
      "@/services": ["./services/index.ts"],
      "@/services/*": ["./services/*"],
      "@/modules": ["./modules/index.ts"],
      "@/modules/*": ["./modules/*"],
      "@/constant": ["./constant/index.ts"],
      "@/constant/*": ["./constant/*"],
      "@/context": ["./context/index.ts"],
      "@/context/*": ["./context/*"],
      "@/core/*": ["./core/*"],
      "@/core": ["./core/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*", "**/*x"],
  "exclude": ["node_modules"]
}
